<!DOCTYPE html>
<html lang="en">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Admin | Carga producto'}) %>
  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <h4 class="titCargaProd">Carga de Nuevo Producto</h4>

    <div class="contenedorCarga">
	  <form action="" method="post">
		  <!--/enctype="multipart/form-data"-->
        <div class="cargaIzq">
          <section class="cargaImgProd">
            <img src="" alt="" />
          </section>
          <input
            type="file"
            class="form-control-file"
            id="exampleFormControlFile1"
            name="avatar"
			multiple
          />
        </div>

        <div class="cargaDer">
          <div class="formCarga">
            <label for="nombreProducto">Nombre Producto</label>
            <input
              type="text"
              name="nombreProducto"
              class="form-control"
              id="nombreProducto"
			  aria-describedby="hola"
			  placeholder="Nombre Producto"
            />
          </div>

          <div class="formCarga">
            <label for="anioProducto">Año Producto</label>
            <input
              type="number"
              name="anioProducto"
              class="form-control"
              id="anioProducto"
			  aria-describedby="anio"
			  placeholder="Año Producto"
            />
          </div>
          <div class="formCarga">
            <label for="bodegaProducto">Bodega</label>
            <input
              type="text"
              name="bodegaProducto"
              class="form-control"
              id="bodegaProducto"
			  aria-describedby="bodega"
			  placeholder="Bodega"
            />
          </div>
          <div class="formCarga">
            <label for="tipoProducto">Tipo Producto</label>
            <!-- /Header 
				<input type="text" name="tipoProducto" class="form-control" id="tipoProducto" aria-describedby="tipo">
				-->
            <select class="form-control" name="tipoProducto" id="tipoProducto">
              <option value="cerveza">Cerveza</option>
              <option value="vino">Vino</option>
              <option value="champagna">Espumante</option>
              <option value="whisky">Whisky</option>
            </select>
          </div>
          <div class="formCarga">
            <label for="regionProducto">Región</label>
            <input
              type="text"
              name="regionProducto"
              class="form-control"
              id="regionProducto"
			  aria-describedby="region"
			  placeholder="Región"
            />
          </div>
          <div class="formCarga">
            <label for="graduacionProducto">Graduación alcoholica</label>
            <input
              type="number"
              name="graduacionProducto"
              class="form-control"
              id="graduacionProducto"
			  aria-describedby="graduacion"
			  placeholder="Graduación alcoholica"
            />
          </div>
          <div class="formCarga">
            <label for="precioProducto">Precio</label>
            <input
              type="number"
              name="precioProducto"
              class="form-control"
              id="precioProducto"
			  aria-describedby="precio"
			  placeholder="Precio"
            />
		  </div>
		  <div class="formCarga">
            <label for="descuentoProducto">Descuento</label>
            <input
              type="number"
              name="descuentoProducto"
              class="form-control"
              id="descuentoProducto"
			  aria-describedby="descuento"
			  placeholder="Descuento"
            />
          </div>
          <div class="formCarga">
            <label for="stockProducto">Stock</label>
            <input
              type="number"
              name="stockProducto"
              class="form-control"
              id="stockProducto"
			  aria-describedby="stock"
			  placeholder="Stock"
            />
          </div>
          <div class="formCarga">
            <label for="descripcionProducto">Descripción</label>
            <input
              type="text"
              name="descripcionProducto"
              class="form-control"
              id="descripcionProducto"
			  aria-describedby="descripcion"
			  placeholder="Descripción"
            />
          </div>
          <br />
          <button type="submit" class="btn btn-success">
            Agregar producto
          </button>
        </div>
      </form>
    </div>
    <br />
    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
